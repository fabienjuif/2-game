{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": false,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": [
    "**/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
